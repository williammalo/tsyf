extends template

block html
	<html class=credit lang=fr>

block title
	|<div>Application Crédit</div>

block content
	form.section(id="form1",action="http://api.maloweb.com/sylvestercredit.php", method="post", target="_blank", enctype="multipart/form-data")
		article.fr
			.col1
				input.c(type="checkbox",value="on",name="i-cond",id="i-cond")
				label(id="l-cond",for="i-cond") J'ai déjà mon application<br>de crédit dans un fichier. 
				br
				br
				.conditional
					input(type="file",name="creditfile",id="creditfile")
					label(for="creditfile") Le fichier: 
					br
					br
				.reverse-conditional
					label.fixedwidth(for="i-nom") Nom: 
					input(name="i-nom",id="i-nom",type="text")
					br
					label.fixedwidth(for="i-tel",style="width:6em") Téléphone: 
					input(name="i-tel",id="i-tel",type="tel")
					br
					label.fixedwidth(for="i-fax",style="width:6em") Fax: 
					input(name="i-fax",id="i-fax",type="tel")
					br
					br
					table
						tr
							td
								label.fixedwidth(for="i-a-no") Adresse: 
							td
								input(name="i-a-no",id="i-a-no",type="number",placeholder="Numéro")
								input(name="i-a-rue",id="i-a-rue",type="text",placeholder="Rue")
								input(name="i-a-ville",id="i-a-ville",type="text",placeholder="Ville")
								input(name="i-a-prov",id="i-a-prov",type="text",placeholder="Province/État")
								input(name="i-a-code",id="i-a-code",type="text",placeholder="Code Postal")
					br
					label(for="i-sp") Instructions spéciales de facturation: 
					textarea(name="i-sp",id="i-sp")
					br
					br
					label(for="i-type") Genre d’activités: 
					br
					input(name="i-type",id="i-type",type="text")
					br
					label(for="i-lot") Nombre d’années en affaire:
					br
					input(name="i-lot",id="i-lot",type="text")
					br
					br
					|Facturé en: 
					input(type="checkbox",value="on",name="i-us",id="i-us")
					label(id="l-us",for="i-us") US 
					input(type="checkbox",value="on",name="i-cdn",id="i-cdn")
					label(id="l-cdn",for="i-cdn") CDN 
					br
					br
					input(type="checkbox",value="on",name="i-pod",id="i-pod")
					label(id="l-pod",for="i-pod") POD requis? 
					br
					br
			.col2
				input.c(type="checkbox",value="on",name="i-cond",id="i-cond2")
				label(id="l-cond2",for="i-cond2") Ces informations sont déjà dans le fichier. 
				br
				br
				.reverse-conditional
					h2 INFORMATIONS BANCAIRES
					label.fixedwidth(for="i-bank",style="width:6em") Banque: 
					input(name="i-bank",id="i-bank",type="text")
					br
					label.fixedwidth(for="i-branch",style="width:6em") Succursale: 
					input(name="i-branch",id="i-branch",type="text")
					br
					label.fixedwidth(for="i-account",style="width:6em") Compte: 
					input(name="i-account",id="i-account",type="text")
					br
					label.fixedwidth(for="i-btel",style="width:6em") Tel: 
					input(name="i-btel",id="i-btel",type="text")
					br
					br
					h2 CREDIT REFERENCES
					ol
						li
							label.fixedwidth(for="i-ref-1-name",style="width:6em") Nom:  
							input(name="i-ref-1-name",id="i-ref-1-name",type="text")
							br
							label.fixedwidth(for="i-ref-1-contact",style="width:6em") Contact: 
							input(name="i-ref-1-contact",id="i-ref-1-contact",type="text")
							br
							label.fixedwidth(for="i-ref-1-tel",style="width:6em") Téléphone: 
							input(name="i-ref-1-tel",id="i-ref-1-tel",type="tel")
							br
							label.fixedwidth(for="i-ref-1-fax",style="width:6em") Fax: 
							input(name="i-ref-1-fax",id="i-ref-1-fax",type="tel")
							br
							br
						li
							label.fixedwidth(for="i-ref-2-name",style="width:6em") Nom:  
							input(name="i-ref-2-name",id="i-ref-2-name",type="text")
							br
							label.fixedwidth(for="i-ref-2-contact",style="width:6em") Contact: 
							input(name="i-ref-2-contact",id="i-ref-2-contact",type="text")
							br
							label.fixedwidth(for="i-ref-2-tel",style="width:6em") Téléphone: 
							input(name="i-ref-2-tel",id="i-ref-2-tel",type="tel")
							br
							label.fixedwidth(for="i-ref-2-fax",style="width:6em") Fax: 
							input(name="i-ref-2-fax",id="i-ref-2-fax",type="tel")
							br
							br
						li
							label.fixedwidth(for="i-ref-3-name",style="width:6em") Nom:  
							input(name="i-ref-3-name",id="i-ref-3-name",type="text")
							br
							label.fixedwidth(for="i-ref-3-contact",style="width:6em") Contact: 
							input(name="i-ref-3-contact",id="i-ref-3-contact",type="text")
							br
							label.fixedwidth(for="i-ref-3-tel",style="width:6em") Téléphone: 
							input(name="i-ref-3-tel",id="i-ref-3-tel",type="tel")
							br
							label.fixedwidth(for="i-ref-3-fax",style="width:6em") Fax: 
							input(name="i-ref-3-fax",id="i-ref-3-fax",type="tel")
				input(type="submit",value="Envoyer")







		
